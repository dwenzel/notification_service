{
	"name": "dwenzel/notification_service",
	"type": "typo3-cms-extension",
	"description": "Notification service extension for the TYPO3 CMS",
	"keywords": ["TYPO3", "extension", "service", "notification"],
	"license": ["GPL-2.0+"],
	"authors": [
		{
			"name": "Dirk Wenzel",
			"role": "Developer"
		}
	],
	"require": {
		"typo3/cms-core": ">=6.2.0,<8.4"
	},
	"require-dev": {
    "mikey179/vfsStream": "1.4.*@dev",
    "phpunit/phpunit": "~4.8.0"
  },
  "autoload": {
    "psr-4": {
      "DWenzel\\NotificationService\\": "Classes"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "DWenzel\\NotificationService\\Tests\\": "Tests",
      "TYPO3\\CMS\\Core\\Tests\\": ".Build/vendor/typo3/cms/typo3/sysext/core/Tests/",
      "TYPO3\\CMS\\Fluid\\Tests\\": ".Build/vendor/typo3/cms/typo3/sysext/fluid/Tests/"
    }
  },
  "replace": {
    "notification_service": "self.version",
    "typo3-ter/notification_service": "self.version"
  },
  "config": {
    "vendor-dir": ".Build/vendor",
    "bin-dir": ".Build/bin"
  },
  "scripts": {
    "post-autoload-dump": [
      "mkdir -p .Build/Web/typo3conf/ext/",
      "mkdir -p .Build/log/coverage/",
      "[ -L .Build/Web/typo3conf/ext/notification_service ] || ln -snvf ../../../../. .Build/Web/typo3conf/ext/notification_service"
    ]
  },
  "extra": {
    "branch-alias": {
      "dev-master": "0.1.x-dev",
      "dev-develop": "0.1.x-dev"
    },
    "typo3/cms": {
      "cms-package-dir": "{$vendor-dir}/typo3/cms",
      "web-dir": ".Build/Web"
    }
  }
}

